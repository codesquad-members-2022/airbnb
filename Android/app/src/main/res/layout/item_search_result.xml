<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_room_image"
        android:layout_width="1dp"
        android:layout_height="match_parent" 
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"/>
    
    <ImageView
        android:id="@+id/iv_room_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_room_image"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_super_badge_line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_super_badge_line_vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_recommand_line_vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <CheckBox
        android:id="@+id/cb_recommand"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@id/gl_recommand_line_vertical"
        app:layout_constraintTop_toBottomOf="@id/gl_super_badge_line_horizontal"
        android:button="@drawable/button_favorite"
        android:buttonTint="@color/airbnb_offWhite"/>

    <TextView
        android:id="@+id/tv_super_badge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gl_super_badge_line_horizontal"
        app:layout_constraintStart_toStartOf="@id/gl_super_badge_line_vertical"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/badge_frame"
        tools:text="슈퍼호스트"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_star_content_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.043"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_star"
        app:layout_constraintTop_toBottomOf="@id/iv_room_image"
        app:layout_constraintStart_toStartOf="@id/gl_star_content_line"/>

    <TextView
        android:id="@+id/tv_star_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/iv_room_image"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="4.80"/>
    
    <TextView
        android:id="@+id/tv_review_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_star_count"
        app:layout_constraintTop_toBottomOf="@id/iv_room_image"
        tools:text="(후기 127개)"/>

</androidx.constraintlayout.widget.ConstraintLayout>