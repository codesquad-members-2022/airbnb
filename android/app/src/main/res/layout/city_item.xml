<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/city_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/city_item_background"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city_name_text"
        style="@style/AirbnbFontStyle.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/time_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/city_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="서울" />

    <TextView
        android:id="@+id/time_text"
        style="@style/AirbnbFontStyle.Subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/city_name_text"
        app:layout_constraintTop_toBottomOf="@id/city_name_text"
        tools:text="차로 30분 거리" />

</androidx.constraintlayout.widget.ConstraintLayout>