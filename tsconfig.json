{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "removeComments": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules/*"]
}
